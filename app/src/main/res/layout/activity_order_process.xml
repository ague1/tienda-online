<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtDetailOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orden #ID"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtDetailTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"/>

        <!-- Timeline simple: 5 pasos verticales -->
        <LinearLayout
            android:id="@+id/timelineContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Cada child será un layout con icon + texto y lo coloreamos según estado -->
            <LinearLayout android:id="@+id/step_placed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <View android:id="@+id/dot_placed" android:layout_width="14dp" android:layout_height="14dp"
                    android:background="@drawable/circle_gray"/>
                <TextView android:id="@+id/txt_placed" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginStart="12dp" android:text="Order placed"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/step_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <View android:id="@+id/dot_pending" android:layout_width="14dp" android:layout_height="14dp"
                    android:background="@drawable/circle_gray"/>
                <TextView android:id="@+id/txt_pending" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginStart="12dp" android:text="Pending"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/step_confirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <View android:id="@+id/dot_confirmed" android:layout_width="14dp" android:layout_height="14dp"
                    android:background="@drawable/circle_gray"/>
                <TextView android:id="@+id/txt_confirmed" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginStart="12dp" android:text="Confirmed"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/step_processing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <View android:id="@+id/dot_processing" android:layout_width="14dp" android:layout_height="14dp"
                    android:background="@drawable/circle_gray"/>
                <TextView android:id="@+id/txt_processing" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginStart="12dp" android:text="Processing"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/step_delivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <View android:id="@+id/dot_delivered" android:layout_width="14dp" android:layout_height="14dp"
                    android:background="@drawable/circle_gray"/>
                <TextView android:id="@+id/txt_delivered" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginStart="12dp" android:text="Delivered"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>