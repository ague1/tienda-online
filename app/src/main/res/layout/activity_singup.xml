<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_auth.Singup"
    android:background="@color/main_screen">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custumer">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- TÍTULO -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/create_Account"
                    android:textSize="20sp"
                    android:gravity="center" />

                <!-- NOMBRE -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/name_User"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/name_user"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custumer"
                    android:hint="@string/hint_name"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:padding="8dp"/>

                <!-- EMAIL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/email"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/email_sigup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custumer"
                    android:hint="@string/hint_Email"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp"
                    android:padding="8dp"/>

                <!-- CONTRASEÑA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/password"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/password_sigup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="18sp"
                    android:hint="@string/hint_Password"
                    android:inputType="textPassword"
                    android:background="@drawable/custumer"
                    android:padding="8dp"/>

                <!-- CONFIRMAR CONTRASEÑA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/confirm_password"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="18sp"
                    android:hint="@string/hint_confirmPassword"
                    android:inputType="textPassword"
                    android:background="@drawable/custumer"
                    android:padding="8dp"/>

                <!-- TIPO DE CUENTA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Tipo de cuenta"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioUserType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario normal"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/radioDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiero ser Delivery (Repartidor)" />

                </RadioGroup>

                <!-- BOTÓN REGISTRARSE -->
                <Button
                    android:id="@+id/button_singup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:textSize="18sp"
                    android:text="@string/button_Sigup"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"/>

                <!-- LINK LOGIN -->
                <TextView
                    android:id="@+id/link_loging"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/create_account_text"
                    android:textSize="18sp"
                    android:gravity="center" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>